# =============================================================================
# Social Post Star - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/social_post_star?sslmode=require

# Connection pooling (optional, for production)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# Webflow CMS Integration
# -----------------------------------------------------------------------------
# Get your API key from: https://webflow.com/dashboard/account/integrations
WEBFLOW_API_KEY=your_webflow_api_key_here

# Your Webflow site ID (found in site settings)
WEBFLOW_SITE_ID=your_site_id_here

# Collection ID for blog posts (found in CMS collections)
WEBFLOW_BLOG_COLLECTION_ID=your_blog_collection_id_here

# Collection IDs for other content types (if applicable)
WEBFLOW_RESOURCES_COLLECTION_ID=
WEBFLOW_CASE_STUDIES_COLLECTION_ID=

# -----------------------------------------------------------------------------
# HubSpot Integration
# -----------------------------------------------------------------------------
# Get your API key from: HubSpot Settings > Integrations > Private Apps
HUBSPOT_API_KEY=your_hubspot_api_key_here

# HubSpot account/portal ID
HUBSPOT_ACCOUNT_ID=your_account_id_here

# HubSpot social media account identifiers (for export)
HUBSPOT_LINKEDIN_ACCOUNT=Centercode - LinkedIn Company Page
HUBSPOT_FACEBOOK_ACCOUNT=Centercode - Facebook Page
HUBSPOT_TWITTER_ACCOUNT=Centercode - Twitter

# -----------------------------------------------------------------------------
# AI Service Configuration (Choose ONE)
# -----------------------------------------------------------------------------
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# OR Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7

# Which AI provider to use: "openai" or "anthropic"
AI_PROVIDER=openai

# -----------------------------------------------------------------------------
# Vector Database for RAG (To Be Determined)
# -----------------------------------------------------------------------------
# Option 1: Pinecone
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=
# PINECONE_INDEX_NAME=

# Option 2: pgvector (PostgreSQL extension in Neon)
# Uses same DATABASE_URL as above
# VECTOR_DIMENSIONS=1536

# Option 3: Weaviate
# WEAVIATE_URL=
# WEAVIATE_API_KEY=

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Content duplication prevention
# How many days before content can be re-promoted (default: 180)
DUPLICATION_THRESHOLD_DAYS=180

# How many days is content considered "new" (default: 14)
# New content gets announcement + promotions, exempt from duplication rule
NEW_CONTENT_THRESHOLD_DAYS=14

# Target posting cadence (posts per week)
POSTS_PER_WEEK=3

# Centercode Labs app launch schedule
LABS_APP_POST_DAY=Wednesday
LABS_APP_POST_TIME=10:30
LABS_APP_POST_TIMEZONE=America/Los_Angeles

# Special days look-ahead (months)
SPECIAL_DAYS_LOOKAHEAD_MONTHS=2

# -----------------------------------------------------------------------------
# RSS Feed Monitoring (Optional - system can auto-discover)
# -----------------------------------------------------------------------------
# Comma-separated list of RSS feed URLs to monitor
RSS_FEEDS=

# How often to refresh RSS feeds (in hours)
RSS_REFRESH_INTERVAL_HOURS=6

# -----------------------------------------------------------------------------
# Google Analytics / Search Console (Phase 2 / V2)
# -----------------------------------------------------------------------------
# GA_PROPERTY_ID=
# GSC_SITE_URL=
# GOOGLE_SERVICE_ACCOUNT_JSON=

# -----------------------------------------------------------------------------
# LinkedIn API (Phase 2 / V2 - for post performance stats)
# -----------------------------------------------------------------------------
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Next.js environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Maximum ad-hoc posts per generation
MAX_ADHOC_POSTS=10

# Maximum posts in batch generation
MAX_BATCH_POSTS=20

# Quality check retry limit
QUALITY_CHECK_MAX_RETRIES=3

# Enable debug logging
DEBUG=false

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# Where to save exported files (relative to public/)
EXPORT_FOLDER=exports

# Maximum export file retention (days)
EXPORT_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Rate Limiting (Optional)
# -----------------------------------------------------------------------------
# Max AI generation requests per minute
RATE_LIMIT_AI_PER_MINUTE=20

# Max content polling requests per hour
RATE_LIMIT_POLLING_PER_HOUR=10

# =============================================================================
# End of Configuration
# =============================================================================
